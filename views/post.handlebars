<div class="text-center">
  <h2>{{title}}</h2>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  <p>{{post.body}}</p>

  <!-- Loop over each object in the comments array -->
{{#each comments as |comment| }}
<section class="row mb-2 comment">
  <section class="col-md-5">
    <a href="/post/{{post.id}}">
      <h2>
        {{post.title}}
      </h2>
      <p>Posted by {{post.user.name}} on {{post.createdAt}}</p>
    </a>
  </section>
  <section class="col-md-7">
    <p>
      {{post.body}}
    </p>
  </section>
</section>
{{/each}}

  
</div>
