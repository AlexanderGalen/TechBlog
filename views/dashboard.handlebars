<section class="row">
  <section class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </section>
</section>

<section class="row mt-4">
  <section class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <section class="form-group mb-4">
        <label for="post-title">Post Title:</label>
        <input class="form-input form-control" type="text" id="post-title" name="post-title" />
      </section>
      <section class="form-group mb-4">
        <label for="post-body">Post Body:</label>
        <textarea class="form-input form-control" id="post-body" name="post-body"></textarea>
      </section>
      <section class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Post</button>
      </section>
    </form>
  </section>

  {{#if posts.length}}
  <section class="col-md-6 project-list">
    <h3>Existing Posts:</h3>

    {{#each posts as |post|}}
    <section class="row mb-2">
      <section class="col-md-8">
        <h4><a href="/project/{{post.id}}">{{post.title}}</a></h4>
      </section>
      <section class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </section>
    </section>
    {{/each}}
  </section>
  {{/if}}
</section>

<script src="./js/dashboard.js"></script>
